		<slide titulo="Linguagens de Representação de TM" codigo="S007">
			<corpo>
				<bloco-realce tipo="negrito">
					<bloco-realce tipo="sublinhado">
						<texto>Gerais:</texto>
					</bloco-realce>
				</bloco-realce>
				<br/>
				<lista tipo="normal">
					<item>
						<texto>AsTMa=</texto>
						<lista tipo="normal">
							<item>
								<texto>sintaxe baseada na linguagem AsTMa;</texto>
							</item>
						</lista>
					</item>
					<item>
						<texto>LTM</texto>
						<lista tipo="normal">
							<item>
								<texto>representa os construtores de TM como texto em um formato simplificado e compacto.</texto>
							</item>
						</lista>
					</item>
				</lista>
				<bloco-realce tipo="negrito">
					<bloco-realce tipo="sublinhado">
						<texto>Baseadas em XML:</texto>
					</bloco-realce>
				</bloco-realce>
				<br/>
				<lista tipo="normal">
					<item>
						<texto>HyTM</texto>
						<lista tipo="normal">
							<item>
								<texto>dialecto SGML baseado em HyTime;</texto>
							</item>
						</lista>
					</item>
					<item>
						<texto>XTM</texto>
						<lista tipo="normal">
							<item>
								<texto>documento XML onde diferentes elementos são usados para representar tópicos, ocorrências, associações, etc;</texto>
							</item>
						</lista>
					</item>
				</lista>
			</corpo>
